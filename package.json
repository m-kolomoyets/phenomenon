        "pretty-quick": "^2.0.1",
        "react-test-renderer": "^18.0.0",
        "replace-in-files": "^3.0.0",
        "start-server-and-test": "^1.12.5",
        "ts-jest": "^27.1.4",
        "typescript": "^4.6.3"
    },
    "resolutions": {
        "chokidar": "3.4.3"
    },
    "engines": {
        "node": ">=12",
        "yarn": ">=2"
    },
    "packageManager": "yarn@3.6.1"
}
